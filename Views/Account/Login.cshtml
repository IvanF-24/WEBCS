@model EnrollmentApp.Controllers.AccountController.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}
<div class="auth-wrapper">
  <div class="auth-card">
    <h2>Iniciar sesión</h2>
    <form asp-action="Login" method="post">
      @Html.AntiForgeryToken()
      <div class="form-field">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="text-error"></span>
      </div>
      <div class="form-field">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="text-error"></span>
      </div>
      <div class="actions">
        <button class="btn" type="submit">Entrar</button>
        <a asp-action="Register" class="btn-outline">Crear cuenta</a>
      </div>
    </form>
  </div>
  <div class="auth-visual">
    <h3>Portal Administrativo</h3>
    <p>Accede al sistema de matrículas y gestión académica.</p>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}