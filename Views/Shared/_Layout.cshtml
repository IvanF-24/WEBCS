<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>@ViewData["Title"] - Instituto Profesional</title>
  <link rel="stylesheet" href="~/css/site.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body>
  <header class="topbar p-3 bg-primary text-white shadow-sm">
    <div class="container d-flex justify-content-between align-items-center">
        
        @if (User.IsInRole("Admin"))
        {
            <a class="brand h4 mb-0 text-white text-decoration-none fw-bold" asp-controller="Dashboard" asp-action="Index">
                Instituto Profesional
            </a>
        }
        else
        {
            <span class="brand h4 mb-0 text-white fw-bold">
                Instituto Profesional
            </span>
        }

        <nav class="d-flex align-items-center">
          
          @if (User.IsInRole("Admin"))
          {
              <a class="text-white mx-3 text-decoration-none" asp-controller="Dashboard" asp-action="Index">Panel</a>
              <a class="text-white mx-3 text-decoration-none" asp-controller="Students" asp-action="Index">Estudiantes</a>
              <a class="text-white mx-3 text-decoration-none" asp-controller="Programs" asp-action="Index">Programas</a>
              <a class="text-white mx-3 text-decoration-none" asp-controller="Courses" asp-action="Index">Cursos</a>
              <a class="text-white mx-3 text-decoration-none" asp-controller="Schedules" asp-action="Index">Horarios</a>
          }

          @if (User?.Identity?.IsAuthenticated == true)
          {
            <div class="d-flex align-items-center ms-4 border-start ps-4 border-white border-opacity-25">
                <span class="user me-3 text-warning fw-bold">Hola, @User.Identity.Name</span>
                
                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                  @Html.AntiForgeryToken()
                  <button class="btn btn-sm btn-outline-light" type="submit">Cerrar sesión</button>
                </form>
            </div>
          }
        </nav>
    </div>
  </header>

  <main class="container mt-5">
    @if (TempData["Success"] != null)
    {
      <div class="alert alert-success alert-dismissible fade show" role="alert">
          @TempData["Success"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }
    @if (TempData["Error"] != null)
    {
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
          @TempData["Error"]
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    }

    @RenderBody()
  </main>

  <footer class="footer mt-auto py-3 bg-light text-center border-top">
    <div class="container text-muted small">
        &copy; @DateTime.UtcNow.Year - Instituto Profesional - Gestión Académica
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>